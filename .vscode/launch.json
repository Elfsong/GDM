    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--model-type", "LlamaAgent", 
                "--model-name", "meta-llama/Llama-3.1-8B-Instruct", 
                "--domain", "all"
            ]
        }
    ]
}